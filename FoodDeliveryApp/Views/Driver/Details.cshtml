@model FoodDeliveryApp.ViewModels.Order.OrderDriverViewModel
@{
    ViewData["Title"] = "Driver Details";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold mb-0">Driver Details</h1>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to Drivers
                        </a>
                    </div>

                    <div class="card border-0 bg-light rounded-4 mb-4">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Driver Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Driver ID:</strong> @Model.Id</p>
                                    <p class="mb-2"><strong>Name:</strong> @Model.Name</p>
                                    <p class="mb-2"><strong>Status:</strong> 
                                    
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded-pill px-4">
                            <i class="fas fa-edit me-2"></i>Edit Driver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
} 