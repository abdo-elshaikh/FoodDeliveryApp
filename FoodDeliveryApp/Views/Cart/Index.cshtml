@model FoodDeliveryApp.ViewModels.Cart.CartViewModel

@{
    ViewData["Title"] = "Your Cart";
}

<div class="container mt-4">
    <h2>Your Cart</h2>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            Your cart is empty.
        </div>
        <a href="@Url.Action("Index", "Menu")" class="btn btn-primary">Browse Menu</a>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Item</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="width: 80px; height: 80px; object-fit: cover; margin-right: 15px;">
                                            }
                                            <div>
                                                <h5>@item.Name</h5>
                                                @if (!string.IsNullOrEmpty(item.RestaurantName))
                                                {
                                                    <p class="text-muted small">@item.RestaurantName</p>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>@item.Price.ToString("C")</td>
                                    <td>
                                        <form asp-action="UpdateCartItem" method="post" class="d-flex">
                                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                                            <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" style="width: 70px;" />
                                            <button type="submit" class="btn btn-sm btn-outline-primary ms-2">Update</button>
                                        </form>
                                    </td>
                                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                                    <td>
                                        <form asp-action="RemoveFromCart" method="post">
                                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="d-flex justify-content-between">
                    <a href="@Url.Action("Index", "MenuItems")" class="btn btn-outline-secondary">Continue Shopping</a>
                    <form asp-action="ClearCart" method="post">
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="return confirm('Are you sure you want to clear your cart?')">
                            Clear Cart
                        </button>
                    </form>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>@Model.Total.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Delivery Fee:</span>
                            <span>Will be calculated at checkout</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between fw-bold">
                            <span>Estimated Total:</span>
                            <span>@Model.Total.ToString("C")</span>
                        </div>
                        <a href="@Url.Action("Checkout", "Order")" class="btn btn-primary w-100 mt-3">Proceed to Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>