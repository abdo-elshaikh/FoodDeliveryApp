@model IEnumerable<FoodDeliveryApp.ViewModels.MenuItems.CustomizationOptionViewModel>

@if (Model?.Any() != true)
{
    <div class="text-muted">No customizations available.</div>
}
else
{
    @foreach (var option in Model)
    {
        <div class="mb-3">
            <label for="customization-@option.Id" class="form-label">@option.Name</label>
            <select id="customization-@option.Id" class="form-select" data-option-id="@option.Id" aria-label="@option.Name">
                <option value="">Select an option</option>
                @foreach (var choice in option.Choices)
                {
                    <option value="@choice.Id" data-price="@choice.Price">@choice.Name (@(choice.Price > 0 ? $"+${choice.Price:F2}" : "Free"))</option>
                }
            </select>
        </div>
    }
}