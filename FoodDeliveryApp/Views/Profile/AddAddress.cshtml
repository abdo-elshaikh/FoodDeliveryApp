@model FoodDeliveryApp.ViewModels.ProfileViewModels.AddressViewModel
@{
    ViewData["Title"] = "Add Address";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h2 class="mb-4"><i class="fas fa-map-marker-alt me-2"></i>@ViewData["Title"]</h2>

<div class="card shadow-lg border-0 animate__animated animate__fadeInUp">
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show animate__animated animate__bounceIn" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show animate__animated animate__shakeX" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="AddAddress" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="CustomerId" />

            <div class="mb-3">
                <label asp-for="AddressName" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-home"></i></span>
                    <input asp-for="AddressName" class="form-control" placeholder="e.g., Home, Work" />
                </div>
                <span asp-validation-for="AddressName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Street" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-road"></i></span>
                    <input asp-for="Street" class="form-control" placeholder="Enter street" />
                </div>
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="City" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                    <input asp-for="City" class="form-control" placeholder="Enter city" />
                </div>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="State" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-map"></i></span>
                    <input asp-for="State" class="form-control" placeholder="Enter state" />
                </div>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ZipCode" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-mail-bulk"></i></span>
                    <input asp-for="ZipCode" class="form-control" placeholder="Enter zip code" />
                </div>
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsDefault" class="form-check-input" />
                <label asp-for="IsDefault" class="form-check-label"></label>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg"><i class="fas fa-save me-2"></i>Save Address</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}