@model FoodDeliveryApp.ViewModels.Profile.EmployeeProfileViewModel
@{
    ViewData["Title"] = "Employee Profile";
    Layout = "~/Views/Shared/_LayoutAuth.cshtml";
}

<h2 class="mb-4"><i class="fas fa-user me-2"></i>@ViewData["Title"]</h2>

<div class="card shadow-lg border-0 animate__animated animate__fadeInUp">
    <div class="card-body p-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show animate__animated animate__bounceIn" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show animate__animated animate__shakeX" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <dl class="row">
            <dt class="col-sm-3"><i class="fas fa-envelope me-2"></i>Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3"><i class="fas fa-user me-2"></i>First Name</dt>
            <dd class="col-sm-9">@Model.FirstName</dd>

            <dt class="col-sm-3"><i class="fas fa-user me-2"></i>Last Name</dt>
            <dd class="col-sm-9">@Model.LastName</dd>

            <dt class="col-sm-3"><i class="fas fa-phone me-2"></i>Phone Number</dt>
            <dd class="col-sm-9">@Model.PhoneNumber</dd>

            <dt class="col-sm-3"><i class="fas fa-calendar-alt me-2"></i>Hire Date</dt>
            <dd class="col-sm-9">@Model.HireDate.ToShortDateString()</dd>

            <dt class="col-sm-3"><i class="fas fa-briefcase me-2"></i>Position</dt>
            <dd class="col-sm-9">@Model.Position</dd>

            <dt class="col-sm-3"><i class="fas fa-image me-2"></i>Profile Picture</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.ProfilePicturePath))
                {
                    <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-thumbnail" style="max-width: 100px;" />
                }
                else
                {
                    <span>No picture uploaded</span>
                }
            </dd>
        </dl>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a class="btn btn-primary" asp-action="ViewEmployeeTasks"><i class="fas fa-tasks me-2"></i>View Tasks</a>
        </div>
    </div>
</div>