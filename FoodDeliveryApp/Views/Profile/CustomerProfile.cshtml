@model FoodDeliveryApp.ViewModels.Profile.CustomerProfileViewModel

@{
    ViewData["Title"] = "Customer Profile";
    Layout = "_ProfileLayout";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>Your Profile</h2>
                <a asp-action="EditCustomerProfile" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-4">
                        @if (string.IsNullOrEmpty(Model.ProfilePicturePath))
                        {
                            <img src="/images/profiles/default-avatar.png" alt="Default Profile" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="@Model.ProfilePicturePath" alt="Profile Picture" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;" />
                        }
                        <div class="mt-2">
                            <h4>@Model.FirstName @Model.LastName</h4>
                            <p class="text-muted">Customer</p>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="list-group">
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Email</h5>
                                </div>
                                <p class="mb-1">@Model.Email</p>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Phone Number</h5>
                                </div>
                                <p class="mb-1">@Model.PhoneNumber</p>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Date of Birth</h5>
                                </div>
                                <p class="mb-1">@Model.DateOfBirth.ToString("MMM dd, yyyy")</p>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Loyalty Points</h5>
                                </div>
                                <p class="mb-1">@Model.LoyaltyPoints</p>
                            </div>
                            <div class="list-group-item">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">Receive Promotions</h5>
                                </div>
                                <p class="mb-1">@(Model.ReceivePromotions ? "Yes" : "No")</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <h4>Delivery Addresses</h4>
                                <a asp-action="ViewAddress" class="btn btn-info">
                                    <i class="fas fa-map-marker-alt"></i> Manage Addresses
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>