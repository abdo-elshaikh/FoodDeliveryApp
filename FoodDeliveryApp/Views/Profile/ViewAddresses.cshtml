@model FoodDeliveryApp.ViewModels.Address.AddressListViewModel

@{
    ViewData["Title"] = "Manage Addresses";
    Layout = "_ProfileLayout";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h2>Your Addresses</h2>
                <a asp-action="AddAddress" class="btn btn-success">
                    <i class="fas fa-plus"></i> Add New Address
                </a>
            </div>
            <div class="card-body">
                @if (Model.Addresses.Count() == 0)
                {
                    <div class="alert alert-info" role="alert">
                        You haven't added any addresses yet. Click the button above to add your first address!
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Address</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Zip</th>
                                    <th>Default</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var address in Model.Addresses)
                                {
                                    <tr>
                                        <td>@address.AddressLine</td>
                                        <td>@address.City</td>
                                        <td>@address.State</td>
                                        <td>@address.PostalCode</td>
                                        <td>
                                            @if (address.IsDefault)
                                            {
                                                <span class="badge badge-success">Default</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="EditAddress" asp-route-id="@address.Id" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <a asp-action="DeleteAddress" asp-route-id="@address.Id" class="btn btn-sm btn-danger ml-1"
                                                   onclick="return confirm('Are you sure you want to delete this address?');">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="CustomerProfile" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to Profile
                </a>
            </div>
        </div>
    </div>
</div>