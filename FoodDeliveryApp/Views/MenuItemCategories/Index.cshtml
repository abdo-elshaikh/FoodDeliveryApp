@model FoodDeliveryApp.ViewModels.MenuItem.MenuItemCategoryListViewModel

@{ Layout = "_Layout"; }

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold mb-0">Menu Categories</h1>
                        <a asp-action="Create" class="btn btn-primary rounded-pill">
                            <i class="fas fa-plus me-2"></i>Create New Category
                        </a>
                    </div>

                    <hr class="my-5">
                    <div class="row g-4">
                        @foreach (var category in Model.Categories)
                        {
                            <div class="col-md-6 col-lg-4" data-aos="fade-up">
                                <div class="card border-0 shadow-sm rounded-4 h-100">
                                    <div class="position-relative">
                                        <img src="@(string.IsNullOrEmpty(category.ImageUrl) ? "/images/default-category.png" : category.ImageUrl)" 
                                             class="card-img-top rounded-top-4" alt="@category.Name"
                                             style="height: 160px; object-fit: cover;">
                                        <div class="card-img-overlay d-flex flex-column justify-content-end">
                                            <a asp-action="Details" asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-outline-primary rounded-pill">
                                                <i class="fas fa-eye me-1"></i>View
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@category.Id" 
                                               class="btn btn-sm btn-outline-secondary rounded-pill">
                                                <i class="fas fa-edit me-1"></i>Edit
                                           </a>
                                        </div>
                                    </div>
                                    <div class="card-body p-4">
                                        <h5 class="card-title fw-bold mb-2">@category.Name</h5>
                                        <p class="card-text text-muted small mb-3">
                                            @(string.IsNullOrEmpty(category.Description) ? "No description available" : category.Description)
                                        </p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="text-primary">
                                                <i class="fas fa-utensils me-1"></i>
                                                <span>@category.MenuItemCount Items</span>
                                            </div>
                                            <div class="btn-group">
                                                <a asp-action="Details" asp-route-id="@category.Id" 
                                                   class="btn btn-sm btn-outline-primary rounded-pill">
                                                    <i class="fas fa-eye me-1"></i>View
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@category.Id" 
                                                   class="btn btn-sm btn-outline-secondary rounded-pill">
                                                    <i class="fas fa-edit me-1"></i>Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@category.Id" 
                                                   class="btn btn-sm btn-outline-danger rounded-pill">
                                                    <i class="fas fa-trash-alt me-1"></i>Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!Model.Categories.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-utensils fa-3x text-muted mb-3"></i>
                            <h3 class="h5 fw-bold mb-2">No Categories Found</h3>
                            <p class="text-muted mb-0">Start by creating your first menu category.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
