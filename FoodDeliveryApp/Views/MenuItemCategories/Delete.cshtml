@model FoodDeliveryApp.Models.MenuItemCategory
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold mb-0">Delete Category</h1>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to Categories
                        </a>
                    </div>

                    <div class="alert alert-danger rounded-4 mb-4" role="alert">
                        <div class="d-flex">
                            <div class="flex-shrink-0">
                                <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
                            </div>
                            <div>
                                <h5 class="alert-heading fw-bold mb-2">Warning!</h5>
                                <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
                            </div>
                        </div>
                    </div>

                    <div class="row g-4">
                        <!-- Category Image -->
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center p-4">
                                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-category.png" : Model.ImageUrl)" 
                                         alt="@Model.Name" class="rounded-3 img-thumbnail mb-3"
                                         style="width: 100%; height: 200px; object-fit: cover;">
                                    @* <div class="badge bg-@(Model.IsActive ? "success" : "danger") rounded-pill">
                                        @(Model.IsActive ? "Active" : "Inactive")
                                    </div> *@
                                </div>
                            </div>
                        </div>

                        <!-- Category Information -->
                        <div class="col-md-8">
                            <div class="card border-0 bg-light">
                                <div class="card-body p-4">
                                    <h5 class="card-title mb-4">Category Information</h5>
                                    
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-tag text-muted"></i>
                                            </span>
                                            <input type="text" class="form-control border-start-0" value="@Model.Name" readonly>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-align-left text-muted"></i>
                                            </span>
                                            <textarea class="form-control border-start-0" rows="4" readonly>@Model.Description</textarea>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Menu Items</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-utensils text-muted"></i>
                                            </span>
                                            <input type="text" class="form-control border-start-0" 
                                                   value="@Model.MenuItems?.Count() Items" readonly>
                                        </div>
                                    </div>

                                    @if (Model.MenuItems?.Any() == true)
                                    {
                                        <div class="alert alert-warning rounded-4" role="alert">
                                            <div class="d-flex">
                                                <div class="flex-shrink-0">
                                                    <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                                                </div>
                                                <div>
                                                    <h6 class="alert-heading fw-bold mb-2">Note</h6>
                                                    <p class="mb-0">This category contains menu items. Deleting it will also remove all associated menu items.</p>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash-alt me-2"></i>Delete Category
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
