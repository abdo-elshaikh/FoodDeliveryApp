@model FoodDeliveryApp.Models.RestaurantCategory
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold mb-0">Delete Category</h1>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to Categories
                        </a>
                    </div>

                    <div class="alert alert-danger rounded-3 mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this category? This action cannot be undone.
                    </div>

                    <div class="row g-4">
                        <!-- Category Image -->
                        <div class="col-md-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center p-4">
                                    <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/default-category.png" : Model.ImageUrl)"
                                        alt="@Model.Name" class="rounded-3 img-thumbnail mb-3"
                                        style="width: 100%; height: 200px; object-fit: cover;">

                                </div>
                            </div>
                        </div>

                        <!-- Category Information -->
                        <div class="col-md-8">
                            <div class="card border-0 bg-light">
                                <div class="card-body p-4">
                                    <h5 class="card-title mb-4">Category Information</h5>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Name</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-tag text-muted"></i>
                                            </span>
                                            <input type="text" class="form-control border-start-0" value="@Model.Name"
                                                readonly>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Description</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-align-left text-muted"></i>
                                            </span>
                                            <textarea class="form-control border-start-0" rows="4"
                                                readonly>@Model.Description</textarea>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Restaurants</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="fas fa-utensils text-muted"></i>
                                            </span>
                                            <input type="text" class="form-control border-start-0"
                                                value="@Model.Restaurants?.Count() Restaurants" readonly>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">Cancel</a>
                            <button type="submit" class="btn btn-danger rounded-pill px-4">
                                <i class="fas fa-trash me-2"></i>Delete Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
