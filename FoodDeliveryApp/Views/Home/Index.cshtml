<!-- Testimonials Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h2 fw-bold mb-2 animate__animated animate__fadeInUp">Customer Reviews</h2>
            <p class="text-muted lead animate__animated animate__fadeInUp">Loved by thousands for seamless food delivery.</p>
        </div>
        <div class="swiper testimonial-swiper animate__animated animate__fadeIn">
            <div class="swiper-wrapper">
                @foreach (var testimonial in Model.Testimonials)
                {
                    <div class="swiper-slide">
                        <div class="testimonial-card bg-white shadow-sm rounded-3 p-4 text-center">
                            <div class="testimonial-rating text-primary mb-3">
                                @for (int i = 0; i < 5; i++)
                                {
                                    <i class="bi bi-star-fill"></i>
                                }
                            </div>
                            <p class="testimonial-text lead fw-medium mb-4">“@testimonial.Quote”</p>
                            <div class="testimonial-author d-flex align-items-center justify-content-center gap-3">
                                <div class="testimonial-avatar">
                                    <img src="@testimonial.AvatarUrl" alt="@testimonial.Name" class="rounded-circle" style="width: 48px; height: 48px;" loading="lazy" />
                                </div>
                                <div class="testimonial-info">
                                    <h4 class="testimonial-name h6 fw-semibold mb-0">@testimonial.Name</h4>
                                    <p class="testimonial-location text-muted small">@testimonial.Location</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="swiper-pagination testimonial-pagination mt-4"></div>
        </div>
    </div>
</section>


<!-- App Features Section -->
