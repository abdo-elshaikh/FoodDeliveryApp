@model FoodDeliveryApp.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
    ViewData["ActiveMenu"] = "Home";
    var appName = "FoodFast Pro";
}

<!-- Hero Section -->
<section class="hero-section position-relative overflow-hidden py-5 bg-gradient-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 py-5">
                <h1 class="display-3 fw-bold mb-4 text-primary animate__animated animate__fadeInUp">
                    Exceptional Dining, Delivered
                </h1>
                <p class="lead mb-4 text-dark fw-medium animate__animated animate__fadeInUp animate__delay-1s">
                    Explore top restaurants with personalized recommendations on @appName.
                </p>

                <form asp-action="Search" asp-controller="Home" method="post" role="search"
                      class="mb-4 animate__animated animate__fadeInUp animate__delay-2s">
                    <div class="input-group input-group-lg position-relative shadow-lg rounded-pill" style="max-width: 600px;">
                        <span class="input-group-text bg-white border-end-0 rounded-start-pill">
                            <i class="bi bi-search text-primary"></i>
                        </span>
                        <input id="search-input" class="form-control border-start-0 py-3" type="search"
                               placeholder="Find cuisines, restaurants, or dishes..." aria-label="Search" name="Query"
                               value="@Model.Search.Query" autocomplete="off" />
                        <input type="hidden" name="Location" value="@Model.Search.Location" />
                        <button class="btn btn-primary fw-medium px-4 rounded-end-pill" type="submit" aria-label="Search">
                            Search
                        </button>
                        <div id="searchSuggestions" class="position-absolute w-100 start-0 bg-white rounded-3 shadow-lg"
                             style="top: 100%; z-index: 1000; display: none; max-height: 300px; overflow-y: auto; margin-top: 10px;">
                            <!-- Suggestions populated dynamically -->
                        </div>
                    </div>
                </form>

                <div class="d-flex align-items-center gap-3 animate__animated animate__fadeInUp animate__delay-3s">
                    <button id="geoLocateBtn" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-medium">
                        <i class="bi bi-geo-alt me-1"></i> Find Nearby
                    </button>
                    <span class="text-muted fw-medium">
                        <i class="bi bi-pin-map me-1"></i> @Model.CurrentLocation
                    </span>
                </div>

                <div class="d-flex flex-wrap gap-3 mt-4 animate__animated animate__fadeInUp animate__delay-4s">
                    <div class="feature-badge bg-white shadow-sm rounded-pill px-3 py-2">
                        <i class="bi bi-clock text-primary me-2"></i> Fast Delivery
                    </div>
                    <div class="feature-badge bg-white shadow-sm rounded-pill px-3 py-2">
                        <i class="bi bi-shield-check text-primary me-2"></i> Quality Assured
                    </div>
                    <div class="feature-badge bg-white shadow-sm rounded-pill px-3 py-2">
                        <i class="bi bi-geo-alt text-primary me-2"></i> Live Tracking
                    </div>
                </div>
            </div>
            <div class="col-lg-6 position-relative animate__animated animate__fadeIn animate__delay-3s">
                <div class="hero-image-container">
                    <img src="~/images/delivery-hero.png" alt="Premium dining experience" class="img-fluid" loading="lazy" />
                    <div class="hero-rating-badge bg-white shadow-lg rounded-3 p-3 animate__animated animate__fadeInUp animate__delay-6s">
                        <div class="d-flex align-items-center gap-3">
                            <div class="bg-primary rounded-circle p-2 text-white">
                                <i class="bi bi-star-fill fs-5"></i>
                            </div>
                            <div>
                                <div class="fw-bold fs-5">4.9 / 5.0</div>
                                <div class="text-muted small">Customer Satisfaction</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="py-5 bg-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="h2 fw-bold mb-2 animate__animated animate__fadeInUp">How @appName Works</h2>
            <p class="text-muted lead animate__animated animate__fadeInUp animate__delay-1s">
                Order your favorite meals in just a few simple steps.
            </p>
        </div>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 100ms">
                <div class="how-it-works-card bg-white shadow-sm rounded-3 p-4 text-center">
                    <div class="how-it-works-icon bg-primary text-white rounded-circle p-3 mb-3 mx-auto">
                        <i class="bi bi-search fs-3"></i>
                    </div>
                    <h3 class="h5 fw-semibold mb-2">Search</h3>
                    <p class="text-muted small">
                        Browse restaurants, cuisines, or dishes with AI-driven recommendations.
                    </p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 200ms">
                <div class="how-it-works-card bg-white shadow-sm rounded-3 p-4 text-center">
                    <div class="how-it-works-icon bg-primary text-white rounded-circle p-3 mb-3 mx-auto">
                        <i class="bi bi-cart-plus fs-3"></i>
                    </div>
                    <h3 class="h5 fw-semibold mb-2">Order</h3>
                    <p class="text-muted small">
                        Select your meal and customize your order with ease.
                    </p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 300ms">
                <div class="how-it-works-card bg-white shadow-sm rounded-3 p-4 text-center">
                    <div class="how-it-works-icon bg-primary text-white rounded-circle p-3 mb-3 mx-auto">
                        <i class="bi bi-geo-alt fs-3"></i>
                    </div>
                    <h3 class="h5 fw-semibold mb-2">Track</h3>
                    <p class="text-muted small">
                        Monitor your delivery in real-time with live tracking.
                    </p>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 animate__animated animate__fadeInUp" style="animation-delay: 400ms">
                <div class="how-it-works-card bg-white shadow-sm rounded-3 p-4 text-center">
                    <div class="how-it-works-icon bg-primary text-white rounded-circle p-3 mb-3 mx-auto">
                        <i class="bi bi-heart fs-3"></i>
                    </div>
                    <h3 class="h5 fw-semibold mb-2">Enjoy</h3>
                    <p class="text-muted small">
                        Savor premium dining delivered fresh to your door.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Explore Categories Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h2 class="h2 fw-bold mb-0 animate__animated animate__fadeInUp">Explore Categories</h2>
            <div class="swiper-navigation d-flex gap-2 animate__animated animate__fadeInUp">
                <button class="btn btn-sm btn-light rounded-circle category-swiper-prev" aria-label="Previous slide">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="btn btn-sm btn-light rounded-circle category-swiper-next" aria-label="Next slide">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
        <div class="swiper category-swiper animate__animated animate__fadeIn">
            <div class="swiper-wrapper">
                @{
                    var categoryIcons = new string[] { "egg-fried", "cup-hot", "egg", "apple", "pizza", "flower2", "tag" };
                }
                @foreach (var category in Model.Categories)
                {
                    var iconClass = categoryIcons[Model.Categories.IndexOf(category) % categoryIcons.Length];
                    <div class="swiper-slide">
                        <a asp-controller="Category" asp-action="Details" asp-route-id="@category.Id" class="category-card text-decoration-none">
                            <div class="category-image-container position-relative rounded-3 overflow-hidden">
                                <img src="@category.ImageUrl" alt="@category.Name" class="category-image" loading="lazy" />
                                <div class="category-overlay bg-dark bg-opacity-50 d-flex flex-column align-items-center justify-content-center text-center p-3">
                                    <div class="category-icon bg-primary text-white rounded-circle p-3 mb-2">
                                        <i class="bi bi-@iconClass fs-4"></i>
                                    </div>
                                    <h3 class="category-name h5 fw-semibold text-white mb-0">@category.Name</h3>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
        <div class="text-center mt-5 animate__animated animate__fadeInUp">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-medium">
                View All Categories <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</section>

<!-- Filters Bar -->
<section class="filter-bar sticky-top shadow-sm bg-white py-3">
    <div class="container">
        <div class="d-flex flex-wrap gap-3 align-items-center">
            <div class="filter-group">
                <label class="filter-label fw-medium text-primary" for="categoryFilter">Category</label>
                <select class="filter-select form-select rounded-pill" aria-label="Category filter" id="categoryFilter">
                    <option value="">All Categories</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label fw-medium text-primary" for="ratingFilter">Rating</label>
                <select class="filter-select form-select rounded-pill" aria-label="Rating filter" id="ratingFilter">
                    <option value="">All Ratings</option>
                    <option value="4">4+ Stars</option>
                    <option value="3">3+ Stars</option>
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label fw-medium text-primary" for="distanceFilter">Distance</label>
                <select class="filter-select form-select rounded-pill" aria-label="Distance filter" id="distanceFilter">
                    <option value="">All Distances</option>
                    <option value="5">Within 5 miles</option>
                    <option value="10">Within 10 miles</option>
                </select>
            </div>
            <div class="filter-group">
                <label class="filter-label fw-medium text-primary" for="priceFilter">Price</label>
                <select class="filter-select form-select rounded-pill" aria-label="Price filter" id="priceFilter">
                    <option value="">All Prices</option>
                    <option value="1">$</option>
                    <option value="2">$$</option>
                    <option value="3">$$$</option>
                </select>
            </div>
            <button class="btn btn-primary rounded-pill px-4 fw-medium" id="applyFilters">
                Apply Filters
            </button>
            <button class="btn btn-outline-secondary rounded-pill ms-auto d-none d-md-block" id="toggleViewBtn" aria-label="Toggle view">
                <i class="bi bi-grid"></i>
            </button>
        </div>
    </div>
</section>

<!-- Popular Restaurants Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h2 class="h2 fw-bold mb-0 animate__animated animate__fadeInUp">
                Top Picks in @Model.CurrentLocation
                <span class="badge bg-primary bg-opacity-10 text-primary rounded-pill ms-2 fs-6">@Model.PopularRestaurants.Count()</span>
            </h2>
            <a asp-controller="Restaurants" asp-action="Index" class="btn btn-link text-primary fw-medium text-decoration-none animate__animated animate__fadeInUp">
                View All <i class="bi bi-arrow-right"></i>
            </a>
        </div>

        <div id="restaurantGrid" class="row g-4">
            @foreach (var restaurant in Model.PopularRestaurants)
            {
                <div class="col-lg-4 col-md-6 restaurant-card animate__animated animate__fadeInUp"
                     data-category="@restaurant.CategoryId" data-rating="@restaurant.Rating"
                     data-distance="@restaurant.Distance" data-price="@restaurant.PriceLevel">
                    <article class="restaurant-item bg-white shadow-sm rounded-3 overflow-hidden">
                        <a asp-action="Details" asp-controller="Restaurant" asp-route-id="@restaurant.Id" class="cursor-pointer">
                        <div class="restaurant-image-container position-relative">
                            <img src="@restaurant.ImageUrl" alt="@restaurant.Name" class="restaurant-image" loading="lazy" />
                            @if (restaurant.Rating >= (decimal)4.5)
                            {
                                <span class="top-rated-badge bg-primary text-white rounded-pill px-3 py-1">
                                    <i class="bi bi-award-fill me-1"></i> Top Rated
                                </span>
                            }
                            <span class="delivery-time-badge bg-dark bg-opacity-75 text-white rounded-pill px-3 py-1">
                                <i class="bi bi-clock me-1"></i> @restaurant.DeliveryTime
                            </span>
                        </div>
                        <div class="restaurant-details p-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h3 class="restaurant-name h5 fw-semibold mb-0">@restaurant.Name</h3>
                                <span class="rating-badge bg-light rounded-pill px-2 py-1">
                                    <i class="bi bi-star-fill text-primary me-1"></i> @restaurant.Rating.ToString("F1")
                                </span>
                            </div>
                            <p class="restaurant-category text-muted small mb-2">
                                <i class="bi bi-tag me-1"></i> @restaurant.Category
                            </p>
                            <div class="restaurant-meta text-muted small">
                                <span><i class="bi bi-geo-alt me-1"></i> @restaurant.Distance mi</span>
                                <span class="ms-2"><i class="bi bi-cash me-1"></i> @string.Concat(Enumerable.Repeat("$", restaurant.PriceLevel))</span>
                            </div>
                        </div>
                        </a>
                    </article>
                </div>
            }
        </div>
        <div class="text-center mt-5 animate__animated animate__fadeInUp">
            <a asp-controller="Restaurants" asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 py-2 fw-medium">
                Explore All Restaurants <i class="bi bi-arrow-right ms-1"></i>
            </a>
        </div>
    </div>
</section>

<!-- Popular Dishes Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h2 class="h2 fw-bold mb-0 animate__animated animate__fadeInUp">Trending Dishes</h2>
            <div class="swiper-navigation d-flex gap-2 animate__animated animate__fadeInUp">
                <button class="btn btn-sm btn-light rounded-circle dish-swiper-prev" aria-label="Previous slide">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="btn btn-sm btn-light rounded-circle dish-swiper-next" aria-label="Next slide">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
        <div class="swiper dish-swiper animate__animated animate__fadeIn">
            <div class="swiper-wrapper">
                @foreach (var dish in Model.PopularDishes)
                {
                    <div class="swiper-slide">
                        <article class="dish-card bg-white shadow-sm rounded-3 overflow-hidden">
                            <a asp-controller="MenuItems" asp-action="Details" asp-route-id="@dish.Id" class="cursor-pointer">
                            <div class="dish-image-container position-relative">
                                <img src="@dish.ImageUrl" alt="@dish.Name" class="dish-image image-fluid" loading="lazy" />
                                <div class="dish-price-badge bg-primary text-white rounded-pill px-3 py-1">
                                    @dish.Price.ToString("C")
                                </div>
                            </div>
                            <div class="dish-details p-4">
                                <h3 class="dish-name h6 fw-semibold mb-2">@dish.Name</h3>
                                <p class="dish-restaurant text-muted small mb-3">
                                    <i class="bi bi-shop me-1"></i> @dish.RestaurantName
                                </p>
                            </div>
                            </a>
                        </article>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

<!-- Offers & Promotions Section -->
<section class="py-5">
    <div class="container">
        <div class="d-flex align-items-center justify-content-between mb-5">
            <h2 class="h2 fw-bold mb-0 animate__animated animate__fadeInUp">Exclusive Offers</h2>
            <div class="swiper-navigation d-flex gap-2 animate__animated animate__fadeInUp">
                <button class="btn btn-sm btn-light rounded-circle offer-swiper-prev" aria-label="Previous slide">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="btn btn-sm btn-light rounded-circle offer-swiper-next" aria-label="Next slide">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
        <div class="swiper offer-swiper animate__animated animate__fadeIn">
            <div class="swiper-wrapper">
                @foreach (var offer in Model.Offers)
                {
                    <div class="swiper-slide">
                        <div class="offer-card bg-white shadow-sm rounded-3 p-4 text-center">
                            <div class="offer-details">
                                <h3 class="offer-title h5 fw-semibold text-primary mb-2">@offer.Title</h3>
                                <p class="offer-description text-muted mb-3">@offer.Description</p>
                                <p class="offer-restaurant text-muted small mb-3">
                                    <i class="bi bi-shop me-1"></i> @offer.RestaurantName
                                </p>
                                <p class="offer-validity text-muted small mb-3">
                                    Valid until @offer.ValidUntil.ToString("MMM dd, yyyy")
                                </p>
                                <button class="btn btn-primary rounded-pill px-4 fw-medium copy-offer-code"
                                        data-code="@offer.Title" aria-label="Copy offer code">
                                    <i class="bi bi-clipboard me-1"></i> Copy Code
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

