@{
    ViewData["Title"] = "Page Not Found";
    ViewData["MetaDescription"] = "The page you're looking for could not be found.";
}

<div class="min-vh-100 d-flex align-items-center">
    <div class="container text-center py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="not-found-content">
                    <div class="display-1 text-primary mb-4">
                        <i class="bi bi-question-circle"></i>
                    </div>
                    <h1 class="display-4 mb-4">Page Not Found</h1>
                    <p class="lead mb-4 text-muted">
                        The page you're looking for doesn't exist or has been moved.
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Go Home
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                    <div class="mt-5">
                        <h5 class="mb-3">Popular Pages:</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="/restaurants" class="text-decoration-none">
                                    <i class="bi bi-shop me-2"></i>Browse Restaurants
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/cart" class="text-decoration-none">
                                    <i class="bi bi-cart me-2"></i>View Cart
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/orders" class="text-decoration-none">
                                    <i class="bi bi-clock-history me-2"></i>Order History
                                </a>
                            </li>
                            <li>
                                <a href="/contact" class="text-decoration-none">
                                    <i class="bi bi-envelope me-2"></i>Contact Us
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .not-found-content {
            animation: fadeInUp 0.5s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .display-1 {
            font-size: 6rem;
        }

        [data-bs-theme="dark"] .not-found-content {
            background: var(--gray-800);
            border-radius: var(--border-radius);
            padding: 3rem;
        }
    </style>
}
