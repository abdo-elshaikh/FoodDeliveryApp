@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    ViewData["MetaDescription"] = "An error occurred while processing your request.";
}

<div class="min-vh-100 d-flex align-items-center">
    <div class="container text-center py-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="error-content">
                    <div class="display-1 text-danger mb-4">
                        <i class="bi bi-exclamation-circle"></i>
                    </div>
                    <h1 class="display-4 mb-4">Oops! Something went wrong</h1>
                    <p class="lead mb-4 text-muted">
                        @if (Model?.ShowRequestId ?? false)
                        {
                            <span>Request ID: <code>@Model.RequestId</code></span>
                        }
                        else
                        {
                            <span>An error occurred while processing your request. We're working on fixing it!</span>
                        }
                    </p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btn-primary">
                            <i class="bi bi-house me-2"></i>Go Home
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </button>
                    </div>
                    <div class="mt-5">
                        <h5 class="mb-3">You might want to:</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">
                                <a href="/restaurants" class="text-decoration-none">
                                    <i class="bi bi-search me-2"></i>Browse Restaurants
                                </a>
                            </li>
                            <li class="mb-2">
                                <a href="/orders" class="text-decoration-none">
                                    <i class="bi bi-clock-history me-2"></i>Check Order History
                                </a>
                            </li>
                            <li>
                                <a href="/contact" class="text-decoration-none">
                                    <i class="bi bi-envelope me-2"></i>Contact Support
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .error-content {
            animation: fadeInUp 0.5s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .display-1 {
            font-size: 6rem;
        }

        [data-bs-theme="dark"] .error-content {
            background: var(--gray-800);
            border-radius: var(--border-radius);
            padding: 3rem;
        }
    </style>
}
