@{
    ViewData["Title"] = "Password Reset Complete";
    Layout = "_LayoutAccount";
}


<div class="text-center mb-4" data-aos="fade-up">
    <div class="mb-4">
        <i class="fas fa-check-circle fa-4x text-success"></i>
    </div>
    <h1 class="h3 fw-bold">Password Reset Complete</h1>
    <p class="text-muted">Your password has been successfully reset</p>
</div>

<div class="card mb-4" data-aos="fade-up" data-aos-delay="100">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-info-circle me-2"></i>What's Next?
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-success mb-0">
            <i class="fas fa-check-circle me-2"></i>
            Your password has been reset successfully. You can now sign in with your new password.
        </div>
    </div>
</div>

<div class="text-center">
    <p class="mb-0">
        <a asp-action="Login" class="btn btn-primary">
            <i class="fas fa-sign-in-alt me-2"></i>Sign In Now
        </a>
    </p>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
