@{
    ViewData["Title"] = "Registration Complete";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 animate__animated animate__fadeInUp">
            <div class="card-body p-4 text-center">
                <h2 class="mb-4">
                    <i class="fas fa-check-circle me-2 text-success"></i>@ViewData["Title"]
                </h2>
                <p>@ViewData["SubTitle"]</p>
                <p>Please check your email <strong>@ViewData["Email"]</strong> for a confirmation link.</p>
                <a class="btn btn-primary mt-3" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-home me-2"></i>Return to Home
                </a>
            </div>
        </div>
    </div>
</div>
