@model FoodDeliveryApp.ViewModels.Account.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    ViewData["Subtitle"] = "Enter your email to reset your password";
    Layout = "_LayoutAccount";
}

<div class="forgot-password-form">
    <form asp-action="ForgotPassword" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="fas fa-envelope"></i>
                </span>
                <input asp-for="Email" class="form-control" type="email" required />
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block btn-lg">
            <i class="fas fa-paper-plane me-2"></i>Send Reset Link
        </button>
    </form>

    <div class="account-links">
        <a asp-action="Login">
            <i class="fas fa-arrow-left me-1"></i>Back to Sign In
        </a>
    </div>
</div>

@section Styles {
    <style>
        .forgot-password-form {
            max-width: 400px;
            margin: 0 auto;
        }

        .input-group {
            position: relative;
        }

        .input-group-text {
            background-color: transparent;
            border-right: none;
            color: var(--text-muted);
        }

        .input-group .form-control {
            border-left: none;
        }

        .input-group .form-control:focus {
            border-color: var(--border-color);
            box-shadow: none;
        }

        .input-group:focus-within {
            box-shadow: 0 0 0 0.2rem rgba(0, 102, 204, 0.25);
            border-radius: var(--border-radius);
        }

        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            border-color: var(--primary-color);
        }
    </style>
}