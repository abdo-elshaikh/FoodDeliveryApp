@{
    ViewData["Title"] = "Email Confirmation";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="mb-4">
                        <div class="mb-3">
                            <i class="fas fa-envelope-open-text fa-4x text-primary"></i>
                        </div>
                        <h1 class="h3 fw-bold mb-3">Email Confirmation</h1>
                        <p class="text-muted mb-4">Thank you for confirming your email. Your account is now active and you can start using all features of our platform.</p>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Login" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fas fa-sign-in-alt me-2"></i>Go to Login
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
