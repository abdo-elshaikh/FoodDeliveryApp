@model FoodDeliveryApp.ViewModels.AccountViewModels.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
    ViewData["SubTitle"] = "Access your FoodFast account to order delicious meals.";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Login" method="post" asp-antiforgery="true">
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="Password" required />
        <span class="password-toggle" aria-label="Show password"><i class="bi bi-eye"></i></span>
        <div class="password-strength mt-1"></div>
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" class="form-check-input" id="rememberMe" name="RememberMe" checked="@Model.RememberMe" />
        <label class="form-check-label" for="rememberMe">Remember Me</label>
    </div>
    <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />
    <button type="submit" class="btn btn-primary w-100">Sign In</button>
    <div class="text-center mt-3">
        <a href="@Url.Action("ForgotPassword", "Account")" class="text-muted small">Forgot Password?</a>
    </div>
</form>