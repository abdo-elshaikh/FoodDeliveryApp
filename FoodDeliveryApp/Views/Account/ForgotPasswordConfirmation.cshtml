@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <h2 class="mb-4">Forgot Password Confirmation</h2>
    <div class="alert alert-info">
        <p>If an account exists with the email you provided, a password reset link has been sent.</p>
        <p>Please check your email (including spam/junk folder) for instructions to reset your password.</p>
    </div>
    <a asp-action="Login" class="btn btn-primary">Back to Login</a>
</div>