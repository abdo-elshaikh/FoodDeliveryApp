@{
    ViewData["Title"] = "Reset Link Sent";
    Layout = "_LayoutAccount";
}


<div class="text-center mb-4" data-aos="fade-up">
    <div class="mb-4">
        <i class="fas fa-envelope-open-text fa-4x text-primary"></i>
    </div>
    <h1 class="h3 fw-bold">Check Your Email</h1>
    <p class="text-muted">We've sent a password reset link to your email address</p>
</div>

<div class="card mb-4" data-aos="fade-up" data-aos-delay="100">
    <div class="card-header bg-light">
        <h5 class="card-title mb-0">
            <i class="fas fa-info-circle me-2"></i>What's Next?
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-info mb-0">
            <i class="fas fa-info-circle me-2"></i>
            Please check your email for a link to reset your password. If you don't see it, check your spam folder.
        </div>
    </div>
</div>

<div class="text-center">
    <p class="mb-0">
        <a asp-action="Login" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left me-2"></i>Back to Sign In
        </a>
    </p>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
