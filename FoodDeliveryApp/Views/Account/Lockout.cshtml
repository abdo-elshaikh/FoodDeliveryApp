@{
    ViewData["Title"] = "Account Locked";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5 text-center">
                    <div class="mb-4">
                        <div class="mb-3">
                            <i class="fas fa-lock fa-4x text-danger"></i>
                        </div>
                        <h1 class="h3 fw-bold mb-3">Account Locked</h1>
                        <p class="text-muted mb-4">Your account has been locked due to too many failed login attempts. Please try again later or contact support for assistance.</p>
                    </div>

                    <div class="alert alert-warning rounded-3 mb-4">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        For security reasons, your account will remain locked for a short period.
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg rounded-pill">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                        <a href="mailto:support@fooddelivery.com" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-envelope me-2"></i>Contact Support
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
}
