@model FoodDeliveryApp.ViewModels.AccountViewModels.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    ViewData["SubTitle"] = "Enter a new password for your account.";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ResetPassword" method="post" asp-antiforgery="true">
    <input type="hidden" name="Token" value="@Model.Token" />
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="Email" value="@Model.Email" required />
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>
    <div class="mb-3 position-relative">
        <label for="password" class="form-label">New Password</label>
        <input type="password" class="form-control" id="password" name="Password" required />
        <span class="password-toggle" aria-label="Show password"><i class="bi bi-eye"></i></span>
        <div class="password-strength mt-1"></div>
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>
    <button type="submit" class="btn btn-primary w-100">Reset Password</button>
</form>