@model FoodDeliveryApp.ViewModels.Account.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-lg border-0 animate__animated animate__fadeInUp">
            <div class="card-body p-4">
                <h2 class="text-center mb-4">
                    <i class="fas fa-key me-2 text-primary"></i>@ViewData["Title"]
                </h2>

                <form asp-action="ChangePassword" method="post" id="changePasswordForm" class="needs-validation" novalidate>
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="OldPassword" class="form-label">Current Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="OldPassword" class="form-control" placeholder="Enter current password"
                                   aria-label="Current Password" aria-describedby="old-password-validation" />
                        </div>
                        <span asp-validation-for="OldPassword" class="text-danger" id="old-password-validation"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="NewPassword" class="form-label">New Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="NewPassword" class="form-control" placeholder="Enter new password"
                                   aria-label="New Password" aria-describedby="new-password-validation" />
                            <button class="btn btn-outline-secondary" type="button" id="toggleNewPassword"
                                    aria-label="Toggle new password visibility">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger" id="new-password-validation"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm New Password</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm new password"
                                   aria-label="Confirm New Password" aria-describedby="confirm-password-validation" />
                            <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword"
                                    aria-label="Toggle confirm password visibility">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger" id="confirm-password-validation"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg" id="changePasswordButton">
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                            <i class="fas fa-save me-2"></i>Change Password
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Toggle new password visibility
            $('#toggleNewPassword').click(function() {
                const passwordInput = $('#NewPassword');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Toggle confirm password visibility
            $('#toggleConfirmPassword').click(function() {
                const passwordInput = $('#ConfirmPassword');
                const icon = $(this).find('i');
                
                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                    icon.removeClass('fa-eye').addClass('fa-eye-slash');
                } else {
                    passwordInput.attr('type', 'password');
                    icon.removeClass('fa-eye-slash').addClass('fa-eye');
                }
            });

            // Form submission handling
            $('#changePasswordForm').on('submit', function() {
                if ($(this).valid()) {
                    const button = $('#changePasswordButton');
                    const spinner = button.find('.spinner-border');
                    const icon = button.find('.fas');
                    
                    button.prop('disabled', true);
                    spinner.removeClass('d-none');
                    icon.addClass('d-none');
                }
            });

            // Enhanced validation feedback
            $('input').on('input', function() {
                $(this).valid();
            });
        });
    </script>
}
