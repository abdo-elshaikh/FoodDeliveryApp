@inject IWebHostEnvironment env
@{
    var appName = "FoodFast Pro";
    var appVersion = "2.3.0";
    var appDescription = "Advanced food ordering from premium restaurants";
    var userRole = User.IsInRole("Admin") ? "Admin" :
                 User.IsInRole("Owner") ? "Owner" :
                 User.IsInRole("Employee") ? "Employee" :
                 User.IsInRole("Customer") ? "Customer" : "";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@appDescription" />
    <meta name="theme-color" content="#ff5733">

    <title>@ViewData["Title"] - @appName</title>

    <!-- Preload critical resources -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" as="style">
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" as="style">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Main Layout -->
    <div class="wrapper flex-grow-1">
        <!-- Navigation -->
        <header class="fixed-top bg-white shadow-sm" id="mainHeader">
            <nav class="navbar navbar-expand-lg py-2">
                <div class="container">
                    <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-cup-hot text-primary me-2 fs-3"></i>
                        <span class="fw-bold fs-4 text-primary">@appName</span>
                    </a>

                    <div class="d-flex align-items-center d-lg-none">
                        <a class="btn position-relative me-2" asp-controller="Order" asp-action="Cart" aria-label="View cart">
                            <i class="bi bi-cart fs-5 text-primary"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count">0</span>
                        </a>
                        <button class="navbar-toggler border-0" type="button" data-bs-toggle="offcanvas"
                                data-bs-target="#mobileMenu" aria-controls="mobileMenu" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    </div>

                    <div class="collapse navbar-collapse" id="navbarMain">
                        <form class="d-none d-lg-flex flex-grow-1 mx-4" asp-action="Search" asp-controller="Home" method="post">
                            <div class="input-group position-relative">
                                <span class="input-group-text bg-light border-end-0">
                                    <i class="bi bi-search text-primary"></i>
                                </span>
                                <input class="form-control bg-light border-start-0" type="search"
                                       placeholder="Find restaurants, cuisines, or dishes..." aria-label="Search" name="Query"
                                       autocomplete="off" id="mainSearch">
                                <input type="hidden" name="Location" value="@ViewBag.CurrentLocation" />
                                <div id="searchSuggestions" class="position-absolute w-100 start-0 bg-white rounded shadow-sm"
                                     style="top: 100%; z-index: 1000; display: none; max-height: 300px; overflow-y: auto;"></div>
                            </div>
                        </form>

                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link fw-medium @(ViewData["ActiveMenu"] == "Home" ? "active text-primary" : "")"
                                   asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link fw-medium dropdown-toggle @(ViewData["ActiveMenu"] == "Restaurants" ? "active text-primary" : "")"
                                   href="#" id="restaurantsDropdown" data-bs-toggle="dropdown" aria-expanded="false">Restaurants</a>
                                <ul class="dropdown-menu shadow border-0 rounded-3" aria-labelledby="restaurantsDropdown">
                                    <li><a class="dropdown-item" asp-controller="Restaurants" asp-action="Index">All Restaurants</a></li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Restaurants" asp-action="Nearby">
                                            <i class="bi bi-geo-alt me-2 text-primary"></i>Nearby
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Restaurants" asp-action="TopRated">
                                            <i class="bi bi-star-fill me-2 text-primary"></i>Top Rated
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Restaurants" asp-action="New">
                                            <i class="bi bi-award me-2 text-primary"></i>New Openings
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-medium @(ViewData["ActiveMenu"] == "Cuisines" ? "active text-primary" : "")"
                                   asp-controller="Category" asp-action="Index">Cuisines</a>
                            </li>
                        </ul>

                        <div class="d-none d-lg-flex align-items-center ms-auto">
                            <a class="btn btn-light position-relative me-3" asp-controller="Order" asp-action="Cart">
                                <i class="bi bi-cart"></i> Cart
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger cart-count">0</span>
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-light dropdown-toggle d-flex align-items-center rounded-pill"
                                            type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="bi bi-person-circle me-2"></i> @User.Identity.Name
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3" aria-labelledby="userDropdown">
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li><span class="dropdown-item-text text-primary fw-medium">Admin Panel</span></li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                                    <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Admin" asp-action="Reports">
                                                    <i class="bi bi-file-earmark-bar-graph me-2 text-primary"></i>Reports
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        @if (User.IsInRole("Owner"))
                                        {
                                            <li><span class="dropdown-item-text text-primary fw-medium">Restaurant Management</span></li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Order" asp-action="Manage">
                                                    <i class="bi bi-list-check me-2 text-primary"></i>Manage Orders
                                                </a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Restaurants" asp-action="Manage">
                                                    <i class="bi bi-shop me-2 text-primary"></i>Manage Restaurants
                                                </a>
                                            </li>
                                            <li><hr class="dropdown-divider"></li>
                                        }
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                                <i class="bi bi-person me-2 text-primary"></i>Profile
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Order" asp-action="History">
                                                <i class="bi bi-clock-history me-2 text-primary"></i>Order History
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Preferences">
                                                <i class="bi bi-gear me-2 text-primary"></i>Preferences
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                                <i class="bi bi-box-arrow-right me-2 text-primary"></i>Sign Out
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a class="btn btn-primary rounded-pill" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i> Sign In
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Mobile Menu -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="mobileMenuLabel">
                    <i class="bi bi-cup-hot text-primary me-2"></i>
                    <span class="fw-bold text-primary">@appName</span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <form class="mb-4" asp-action="Search" asp-controller="Home" method="post">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search text-primary"></i>
                        </span>
                        <input class="form-control bg-light border-start-0" type="search"
                               placeholder="Find restaurants, cuisines..." aria-label="Search" name="Query">
                        <input type="hidden" name="Location" value="@ViewBag.CurrentLocation" />
                    </div>
                </form>
                <ul class="nav flex-column gap-1">
                    <li class="nav-item">
                        <a class="nav-link py-2 px-3 rounded @(ViewData["ActiveMenu"] == "Home" ? "active bg-light text-primary" : "")"
                           asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house me-2"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link py-2 px-3 rounded @(ViewData["ActiveMenu"] == "Restaurants" ? "active bg-light text-primary" : "")"
                           asp-controller="Restaurants" asp-action="Index">
                            <i class="bi bi-shop me-2"></i> Restaurants
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link py-2 px-3 rounded @(ViewData["ActiveMenu"] == "Cuisines" ? "active bg-light text-primary" : "")"
                           asp-controller="Category" asp-action="Index">
                            <i class="bi bi-egg-fried me-2"></i> Cuisines
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link py-2 px-3 rounded" asp-controller="Order" asp-action="Cart">
                            <i class="bi bi-cart me-2"></i> Cart <span class="badge bg-danger rounded-pill cart-count">0</span>
                        </a>
                    </li>

                    <li><hr class="dropdown-divider"></li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <div class="px-3 py-2">
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-person-circle fs-4 me-2"></i>
                                    <span class="fw-medium">@User.Identity.Name</span>
                                </div>
                            </div>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link py-2 px-3 rounded" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link py-2 px-3 rounded" asp-controller="Admin" asp-action="Reports">
                                    <i class="bi bi-file-earmark-bar-graph me-2"></i> Reports
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Owner"))
                        {
                            <li class="nav-item">
                                <a class="nav-link py-2 px-3 rounded" asp-controller="Order" asp-action="Manage">
                                    <i class="bi bi-list-check me-2"></i> Manage Orders
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link py-2 px-3 rounded" asp-controller="Restaurants" asp-action="Manage">
                                    <i class="bi bi-shop me-2"></i> Manage Restaurants
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link py-2 px-3 rounded" asp-controller="Account" asp-action="Profile">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-2 px-3 rounded" asp-controller="Order" asp-action="History">
                                <i class="bi bi-clock-history me-2"></i> Order History
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-2 px-3 rounded" asp-controller="Account" asp-action="Preferences">
                                <i class="bi bi-gear me-2"></i> Preferences
                            </a>
                        </li>
                        <li class="nav-item mt-2">
                            <a class="btn btn-outline-primary w-100" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Sign Out
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item mt-2">
                            <a class="btn btn-primary w-100" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Main Content -->
        <main class="flex-grow-1 mt-5 pt-3">
            @RenderBody()
            @if (env.IsDevelopment())
            {
                <script src="/_framework/aspnetcore-browser-refresh.js"></script>
            }
        </main>

        <!-- Footer -->
        <footer class="bg-dark text-white py-5 mt-5">
            <div class="container">
                <div class="row g-4">
                    <div class="col-lg-4 col-md-6">
                        <div class="mb-4">
                            <h5 class="fw-bold d-flex align-items-center mb-3">
                                <i class="bi bi-cup-hot text-primary me-2"></i>
                                <span class="text-primary">@appName</span>
                            </h5>
                            <p class="text-light">@appDescription</p>
                        </div>
                        <div class="d-flex gap-2">
                            <a href="https://www.apple.com/app-store/" class="btn btn-outline-light btn-sm rounded-pill">
                                <i class="bi bi-apple me-1"></i> App Store
                            </a>
                            <a href="https://play.google.com/store" class="btn btn-outline-light btn-sm rounded-pill">
                                <i class="bi bi-google-play me-1"></i> Google Play
                            </a>
                        </div>
                    </div>
                    <div class="col-6 col-md-3 col-lg-2">
                        <h6 class="fw-bold mb-3 text-light">Company</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a asp-controller="Home" asp-action="AboutUs" class="text-light text-decoration-none hover-highlight">About Us</a></li>
                            <li class="mb-2"><a href="https://careers.foodfastpro.com" class="text-light text-decoration-none hover-highlight">Careers</a></li>
                            <li class="mb-2"><a href="https://press.foodfastpro.com" class="text-light text-decoration-none hover-highlight">Press</a></li>
                        </ul>
                    </div>
                    <div class="col-6 col-md-3 col-lg-2">
                        <h6 class="fw-bold mb-3 text-light">Support</h6>
                        <ul class="list-unstyled">
                            <li class="mb-2"><a asp-controller="Home" asp-action="Help" class="text-light text-decoration-none hover-highlight">Help Center</a></li>
                            <li class="mb-2"><a asp-controller="Home" asp-action="Terms" class="text-light text-decoration-none hover-highlight">Terms of Service</a></li>
                            <li class="mb-2"><a asp-controller="Home" asp-action="Privacy" class="text-light text-decoration-none hover-highlight">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-4">
                        <h6 class="fw-bold mb-3 text-light">Stay Connected</h6>
                        <form class="d-flex mb-3" id="newsletterForm" action="/Home/Subscribe" method="post">
                            <input type="email" class="form-control bg-dark text-light border-secondary me-2"
                                   placeholder="Enter your email" aria-label="Email" name="email" required>
                            <button class="btn btn-primary rounded-pill" type="submit">Subscribe</button>
                        </form>
                        <div class="d-flex gap-3">
                            <a href="https://twitter.com/foodfastpro" class="text-light fs-5 social-icon"><i class="bi bi-twitter"></i></a>
                            <a href="https://facebook.com/foodfastpro" class="text-light fs-5 social-icon"><i class="bi bi-facebook"></i></a>
                            <a href="https://instagram.com/foodfastpro" class="text-light fs-5 social-icon"><i class="bi bi-instagram"></i></a>
                            <a href="https://linkedin.com/company/foodfastpro" class="text-light fs-5 social-icon"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>
                <hr class="my-4 border-secondary">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start">
                        <p class="mb-0 small">© @DateTime.Now.Year FoodFast Technologies. All rights reserved.</p>
                    </div>
                    <div class="col-md-6 text-center text-md-end mt-3 mt-md-0">
                        <div class="d-flex justify-content-center justify-content-md-end gap-3">
                            <a asp-controller="Home" asp-action="Terms" class="text-light small">Terms</a>
                            <a asp-controller="Home" asp-action="Privacy" class="text-light small">Privacy</a>
                            <a href="#" class="text-light small">Cookies</a>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>