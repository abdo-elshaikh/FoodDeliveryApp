@{
    var appName = "FoodFast";
    var appTagline = "Fast, reliable, and convenient food delivery service.";
    var currentYear = DateTime.Now.Year;
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@appTagline" />
    <meta name="theme-color" content="#ff5733" />
    <title>@ViewData["Title"] - @appName</title>
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="auth-body">
    <div class="theme-toggle position-fixed">
        <button id="themeToggle" class="btn btn-sm" aria-label="Toggle Theme">
            <i class="bi bi-sun-fill theme-icon-light"></i>
            <i class="bi bi-moon-fill theme-icon-dark"></i>
        </button>
    </div>

    <div class="auth-container">
        <div class="auth-banner d-none d-lg-flex">
            <div class="banner-content">
                <div class="logo-container mb-4">
                    <img src="~/images/logo-large-light.png" alt="@appName Logo" class="logo-large-light" />
                    <img src="~/images/logo-large-dark.png" alt="@appName Logo" class="logo-large-dark d-none" />
                </div>
                <h2 class="banner-title mb-3">Welcome to @appName</h2>
                <p class="banner-text mb-4">@appTagline</p>
                <div class="banner-features">
                    <div class="feature-item">
                        <i class="bi bi-clock"></i>
                        <span>Fast Delivery</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-shield-check"></i>
                        <span>Safe & Secure</span>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-shop"></i>
                        <span>Local Restaurants</span>
                    </div>
                </div>
            </div>
            <div class="banner-attribution">
                Photo by <a href="https://unsplash.com/" target="_blank" rel="noopener noreferrer">Unsplash</a>
            </div>
        </div>

        <div class="auth-form-container">
            <div class="auth-form-header">
                <div class="logo-mobile text-center mb-4">
                    <img src="~/images/logo-light.png" alt="@appName Logo" class="logo-light" width="140" />
                    <img src="~/images/logo-dark.png" alt="@appName Logo" class="logo-dark d-none" width="140" />
                </div>
                <h1 class="auth-title">@ViewData["Title"]</h1>
                @if (ViewData["SubTitle"] != null)
                {
                    <p class="auth-subtitle">@ViewData["SubTitle"]</p>
                }
            </div>

            <!-- Alerts -->
            <div class="auth-alerts" aria-live="polite">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <div>@TempData["SuccessMessage"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                            <div>@TempData["ErrorMessage"]</div>
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>

            <!-- Form -->
            <div class="auth-form-content">
                @RenderBody()
            </div>

            <div class="auth-footer">
                <p class="copyright">© @currentYear @appName. All rights reserved.</p>
                <div class="language-selector">
                    <select class="form-select form-select-sm">
                        <option value="en">English</option>
                        <option value="es">Español</option>
                        <option value="fr">Français</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/theme.js" asp-append-version="true"></script>
    <script src="~/js/auth.js" asp-append-version="true"></script>
    @* <partial name="_ValidationScriptsPartial" /> *@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>