@{
    Layout = null;
    var appName = "FoodFast";
    var appDescription = "Fast, reliable, and convenient food delivery service.";
}
<!DOCTYPE html>
<html lang="en" data-bs-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@appDescription" />
    <meta name="theme-color" content="#ff5733" />
    <title>@ViewData["Title"] - @appName</title>

    <!-- Preload critical resources -->
    <link rel="preconnect" href="https://cdn.jsdelivr.net" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" as="style" />
    <link rel="preload" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" as="style" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" sizes="16x16" />

    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Theme Toggle -->
    <div class="theme-toggle position-fixed top-0 end-0 m-3 z-3">
        <button class="btn btn-icon rounded-circle glassmorphic" id="themeToggle" aria-label="Toggle light and dark theme">
            <i class="bi bi-sun-fill light-icon"></i>
            <i class="bi bi-moon-fill dark-icon d-none"></i>
        </button>
    </div>

    <!-- Auth Container -->
    <div class="auth-container flex-grow-1 d-flex align-items-center justify-content-center position-relative">
        <!-- Form Wrapper -->
        <div class="auth-form-wrapper glassmorphic rounded-3 p-4 p-md-5 animate__animated animate__fadeInUp" role="dialog" aria-labelledby="auth-title">
            <div class="text-center mb-4">
                <div class="logo mb-3">
                    <img src="~/images/logo-light.png" alt="@appName Logo" class="img-fluid logo-light" width="120" />
                    <img src="~/images/logo-dark.png" alt="@appName Logo" class="img-fluid logo-dark d-none" width="120" />
                </div>
                <h1 class="auth-title h2 fw-bold" id="auth-title">@ViewData["Title"]</h1>
                <p class="auth-subtitle text-muted mb-0">@ViewData["SubTitle"]</p>
            </div>
            <!-- Welcome Message -->
            <div class="welcome-message alert alert-info alert-dismissible fade show rounded-3 mb-4" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                Welcome to @appName! Sign in or create an account to start ordering.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <!-- Form Switcher -->
            <nav class="form-switcher nav nav-tabs justify-content-center mb-4" role="tablist">
                <a href="@Url.Action("Login", "Account")"
                   class="nav-link @((ViewData["CurrentAction"]?.ToString() == "Login") ? "active" : "")"
                   id="login-tab"
                   role="tab"
                   aria-controls="login-form"
                   aria-selected="@((ViewData["CurrentAction"]?.ToString() == "Login") ? "true" : "false")">
                    Sign In
                </a>
                <a href="@Url.Action("Register", "Account")"
                   class="nav-link @((ViewData["CurrentAction"]?.ToString() == "Register") ? "active" : "")"
                   id="register-tab"
                   role="tab"
                   aria-controls="register-form"
                   aria-selected="@((ViewData["CurrentAction"]?.ToString() == "Register") ? "true" : "false")">
                    Sign Up
                </a>
            </nav>
            <!-- Alerts -->
            <div aria-live="polite" role="alert">
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show rounded-3 animate__animated animate__fadeIn" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show rounded-3 animate__animated animate__fadeIn" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            </div>
            <!-- OAuth Login -->
            <div class="oauth-login mb-4 text-center">
                <div class="d-flex gap-2 justify-content-center">
                    <a href="/Account/GoogleLogin"
                       class="btn btn-outline-secondary oauth-btn"
                       aria-label="Sign in with Google"
                       data-loading-text='<i class="bi bi-arrow-repeat spin"></i>'>
                        <i class="bi bi-google"></i>
                    </a>
                    <a href="/Account/AppleLogin"
                       class="btn btn-outline-secondary oauth-btn"
                       aria-label="Sign in with Apple"
                       data-loading-text='<i class="bi bi-arrow-repeat spin"></i>'>
                        <i class="bi bi-apple"></i>
                    </a>
                </div>
                <div class="text-center my-2">
                    <span class="text-muted small">or use your email</span>
                </div>
            </div>
            <!-- Form -->
            <div class="auth-form position-relative">
                @RenderBody()
                <div class="form-loading d-none position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center bg-white bg-opacity-75 rounded-3">
                    <div class="spinner-border text-primary custom-spinner" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-transparent text-center py-3 sticky-footer">
        <div class="footer-links d-flex justify-content-center gap-3 mb-2">
            <a href="@Url.Action("Index", "Home")" class="footer-link">Home</a>
            <a href="@Url.Action("Privacy", "Home")" class="footer-link">Privacy</a>
            <a href="@Url.Action("Terms", "Home")" class="footer-link">Terms</a>
            <a href="@Url.Action("Help", "Home")" class="footer-link">Help</a>
        </div>
        <p class="small text-muted mb-0">© @DateTime.Now.Year @appName. All rights reserved.</p>
    </footer>

    <!-- Scripts -->
    <script defer src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js"></script>
    <script defer src="~/js/auth.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>