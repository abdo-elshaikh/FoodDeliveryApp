@{
    ViewData["Title"] = "Page Not Found - Food Delivery App";
    ViewData["Description"] = "The page you are looking for could not be found.";
    Layout = null;
}

<div class="not-found-page min-vh-100 d-flex align-items-center justify-content-center py-5" style="background: linear-gradient(135deg, #f0f7ff 0%, #e6f3ff 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 text-center">
                <div class="not-found-content bg-white rounded-4 shadow-sm p-5 animate-fade-in">
                    <div class="not-found-icon mb-4" style="position: relative; animation: float 3s ease-in-out infinite;">
                        <i class="fas fa-utensils fa-4x text-primary"></i>
                        <i class="fas fa-search fa-2x text-muted position-absolute" style="top: 50%; left: 50%; transform: translate(-50%, -50%);"></i>
                    </div>
                    <h1 class="display-5 fw-bold mb-3">404</h1>
                    <p class="lead text-muted mb-4">Oops! The page you're looking for seems to have disappeared into thin air.</p>
                    
                    <div class="not-found-search mb-4">
                        <form action="/Menu/Search" method="get" class="search-form">
                            <div class="input-group">
                                <input type="search" 
                                       name="q" 
                                       class="form-control form-control-lg rounded-start-pill border-0 shadow-none" 
                                       placeholder="Search for restaurants or dishes..." 
                                       aria-label="Search">
                                <button type="submit" class="btn btn-primary btn-lg rounded-end-pill px-4">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>
                    </div>

                    <div class="not-found-actions">
                        <a href="/" class="btn btn-primary btn-lg rounded-pill px-4 me-2">
                            <i class="fas fa-home me-2"></i>Go Home
                        </a>
                        <button onclick="window.history.back()" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </button>
                    </div>

                    <div class="not-found-suggestions mt-4">
                        <h2 class="h5 mb-3">Popular Pages</h2>
                        <div class="row g-3">
                            <div class="col-md-4">
                                <a href="/Menu" class="suggestion-item d-flex flex-column align-items-center p-3 bg-light rounded-3 text-decoration-none">
                                    <i class="fas fa-utensils text-primary mb-2"></i>
                                    <span>Menu</span>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/Restaurant" class="suggestion-item d-flex flex-column align-items-center p-3 bg-light rounded-3 text-decoration-none">
                                    <i class="fas fa-store text-primary mb-2"></i>
                                    <span>Restaurants</span>
                                </a>
                            </div>
                            <div class="col-md-4">
                                <a href="/Offers" class="suggestion-item d-flex flex-column align-items-center p-3 bg-light rounded-3 text-decoration-none">
                                    <i class="fas fa-gift text-primary mb-2"></i>
                                    <span>Offers</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }
    .suggestion-item {
        transition: all 0.3s ease;
    }
    .suggestion-item:hover {
        transform: translateY(-5px);
        background-color: #f8f9fa !important;
    }
</style>
