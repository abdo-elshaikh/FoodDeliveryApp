<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FoodDeliveryApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FoodDeliveryApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" />

    <style>
        :root {
            --primary-color: #7F56D9;
            --primary-hover: #6941C6;
            --secondary-color: #F9F5FF;
            --text-color: #101828;
            --text-muted: #667085;
            --border-color: #EAECF0;
            --border-radius: 1rem;
            --shadow-sm: 0 1px 2px rgba(16, 24, 40, 0.05);
            --shadow-md: 0 4px 8px -2px rgba(16, 24, 40, 0.1);
            --shadow-lg: 0 12px 16px -4px rgba(16, 24, 40, 0.08);
            --background-color: #ffffff;
            --danger-color: #F04438;
            --success-color: #12B76A;
        }

        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #FCFCFD;
            min-height: 100vh;
            margin: 0;
            padding: 0;
            color: var(--text-color);
        }

        .account-page {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem;
        }

        .account-container {
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .account-content {
            position: relative;
            z-index: 1;
        }

        .account-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .back-home {
            display: flex;
            align-items: center;
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.875rem;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .back-home:hover {
            color: var(--primary-color);
        }

        .back-home i {
            margin-right: 0.5rem;
        }

        .brand-logo img {
            height: 32px;
            width: auto;
        }

        .account-body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 200px);
        }

        .account-card {
            background: var(--background-color);
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-lg);
            width: 100%;
            max-width: 480px;
            overflow: hidden;
        }

        .account-card-header {
            padding: 2rem 2rem 1.5rem;
            text-align: center;
            background-color: var(--secondary-color);
        }

        .account-title {
            font-size: 1.5rem;
            font-weight: 600;
            margin: 0;
            color: var(--text-color);
        }

        .account-subtitle {
            color: var(--text-muted);
            margin: 0.5rem 0 0;
            font-size: 0.875rem;
        }

        .account-card-body {
            padding: 2rem;
        }

        .account-footer {
            text-align: center;
            margin-top: 2rem;
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        /* Form Styles */
        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 500;
            margin-bottom: 0.5rem;
            color: var(--text-color);
            font-size: 0.875rem;
        }

        .form-control {
            border: 1px solid var(--border-color);
            border-radius: 0.5rem;
            padding: 0.625rem 0.875rem;
            font-size: 0.875rem;
            transition: all 0.2s ease;
            background-color: var(--background-color);
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 4px rgba(127, 86, 217, 0.1);
        }

        .input-group {
            position: relative;
        }

        .input-group-text {
            background-color: var(--background-color);
            border: 1px solid var(--border-color);
            border-right: none;
            color: var(--text-muted);
            padding: 0.625rem 0.875rem;
        }

        .input-group .form-control {
            border-left: none;
        }

        .input-group:focus-within .input-group-text,
        .input-group:focus-within .form-control {
            border-color: var(--primary-color);
        }

        .btn {
            padding: 0.625rem 1rem;
            font-weight: 500;
            font-size: 0.875rem;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .btn-primary:hover {
            background-color: var(--primary-hover);
            border-color: var(--primary-hover);
        }

        .btn-block {
            width: 100%;
        }

        .alert {
            border: none;
            border-radius: 0.5rem;
            padding: 0.875rem 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
            display: flex;
            align-items: center;
        }

        .alert-success {
            background-color: #ECFDF3;
            color: var(--success-color);
        }

        .alert-danger {
            background-color: #FEF3F2;
            color: var(--danger-color);
        }

        .text-danger {
            color: var(--danger-color) !important;
            font-size: 0.75rem;
            margin-top: 0.25rem;
        }

        .form-check-input:checked {
            background-color: var(--primary-color);
            border-color: var(--primary-color);
        }

        .form-check-label {
            color: var(--text-muted);
            font-size: 0.875rem;
        }

        .form-check-label a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
        }

        .form-check-label a:hover {
            text-decoration: underline;
        }

        /* Responsive Design */
        @@media(max - width: 768px) {
                .account-page {
                    padding: 1rem;
                }

                .account-card {
                    max-width: 100%;
                }

                .account-card-header {
                    padding: 1.5rem 1.5rem 1rem;
                }

                .account-card-body {
                    padding: 1.5rem;
                }

                .account-title {
                    font-size: 1.25rem;
                }
            }

            /* Dark Mode Support */
            @@media(prefers - color - scheme: dark) {
                    :root {
                        --background-color: #1D2939;
                        --text-color: #F9FAFB;
                        --text-muted: #D0D5DD;
                        --border-color: #344054;
                        --secondary-color: #2D3748;
                    }

                    body {
                        background-color: #111827;
                    }

                    .account-card {
                        background: var(--background-color);
                    }

                    .form-control {
                        background-color: var(--background-color);
                        border-color: var(--border-color);
                        color: var(--text-color);
                    }

                    .form-control:focus {
                        background-color: var(--background-color);
                    }

                    .input-group-text {
                        background-color: var(--background-color);
                        border-color: var(--border-color);
                        color: var(--text-muted);
                    }

                    .alert-success {
                        background-color: rgba(18, 183, 106, 0.1);
                    }

                    .alert-danger {
                        background-color: rgba(240, 68, 56, 0.1);
                    }
                }
            </style>
            @RenderSection("Styles", required: false)
        </head>

        <body class="account-page">
            <div class="account-container">
                <div class="account-content">
                    <div class="account-header">
                        <a asp-controller="Home" asp-action="Index" class="back-home">
                            <i class="fas fa-arrow-left"></i>
                            <span>Back to Home</span>
                        </a>
                        <div class="brand-logo">
                            <img src="~/images/logo.png" alt="FoodDeliveryApp Logo" />
                        </div>
                    </div>

                    <div class="account-body">
                        <div class="account-card">
                            <div class="account-card-header">
                                <h1 class="account-title">@ViewData["Title"]</h1>
                                <p class="account-subtitle">@ViewData["Subtitle"]</p>
                            </div>

                            <div class="account-card-body">
                                @if (TempData["Success"] != null)
                                {
                                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                                        <i class="fas fa-check-circle me-2"></i>
                                        @TempData["Success"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                @if (TempData["Error"] != null)
                                {
                                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        @TempData["Error"]
                                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }

                                @RenderBody()
                            </div>
                        </div>
                    </div>

                    <div class="account-footer">
                        <p>&copy; @DateTime.Now.Year - FoodDeliveryApp. All rights reserved.</p>
                    </div>
                </div>
            </div>

            <script src="~/lib/jquery/dist/jquery.min.js"></script>
            <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
            <script src="~/js/site.js" asp-append-version="true"></script>
            @await RenderSectionAsync("Scripts", required: false)

            <script>
                // Password toggle functionality
                function togglePassword(inputId) {
                    const input = document.getElementById(inputId);
                    const icon = input.nextElementSibling.querySelector('i');

                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('fa-eye');
                        icon.classList.add('fa-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('fa-eye-slash');
                        icon.classList.add('fa-eye');
                    }
                }

                // Alert auto-dismiss
                document.querySelectorAll('.alert').forEach(alert => {
                    setTimeout(() => {
                        alert.classList.remove('show');
                        setTimeout(() => alert.remove(), 300);
                    }, 5000);
                });
            </script>
        </body>

        </html>
