@model FoodDeliveryApp.ViewModels.Review.ReviewListViewModel

@{ Layout = "_Layout"; }

<h2>Reviews</h2>

<h3>Restaurant Reviews</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Content</th>
            <th>Rating</th>
            <th>User</th>
            <th>Restaurant</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.restaurantReviewListViewModel.Items)
        {
            <tr>
                <td>@review.Content</td>
                <td>@review.Rating</td>
                <td>@review.UserId</td>
                <td>@review.RestaurantName</td>
                <td>
                    <a asp-action="EditRestaurantReview" asp-route-id="@review.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@review.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Menu Item Reviews</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Content</th>
            <th>Rating</th>
            <th>User</th>
            <th>Menu Item</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model.menuItemReviewListViewModel.Items)
        {
            <tr>
                <td>@review.Content</td>
                <td>@review.Rating</td>
                <td>@review.UserId</td>
                <td>@review.MenuItemName</td>
                <td>
                    <a asp-action="EditMenuItemReview" asp-route-id="@review.Id" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" asp-route-id="@review.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateRestaurantReview" class="btn btn-success">Add Restaurant Review</a>
<a asp-action="CreateMenuItemReview" class="btn btn-success">Add Menu Item Review</a>
