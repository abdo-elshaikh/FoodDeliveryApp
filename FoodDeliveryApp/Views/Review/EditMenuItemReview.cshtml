@model FoodDeliveryApp.ViewModels.Review.MenuItemReviewUpdateViewModel

@{ Layout = "_Layout"; }

<h2>Edit Menu Item Review</h2>

<form asp-action="EditMenuItemReview" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Content" class="form-label"></label>
        <textarea asp-for="Content" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" type="number" min="1" max="5" step="0.1" class="form-control" />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MenuItemId" class="form-label"></label>
        <input asp-for="MenuItemId" type="number" class="form-control" />
        <span asp-validation-for="MenuItemId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{ Layout = "_Layout"; }
}
