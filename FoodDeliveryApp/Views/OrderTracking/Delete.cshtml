@model FoodDeliveryApp.Models.OrderTracking
@{
    ViewData["Title"] = "Delete Order Tracking";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-sm rounded-4" data-aos="fade-up">
                <div class="card-body p-4 p-md-5">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h1 class="h3 fw-bold mb-0">Delete Order Tracking</h1>
                        <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                            <i class="fas fa-arrow-left me-2"></i>Back to Tracking
                        </a>
                    </div>

                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>Are you sure you want to delete this tracking information?
                    </div>

                    <div class="card border-0 bg-light rounded-4 mb-4">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Order Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Order ID:</strong> @Model.OrderId</p>
                                    <p class="mb-2"><strong>Status:</strong> <span class="badge bg-@(Model.Status == OrderStatus.Delivered ? "success" : "warning")">@Model.Status</span></p>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Updated At:</strong> @Model.UpdatedAt</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card border-0 bg-light rounded-4">
                        <div class="card-body p-4">
                            <h5 class="card-title mb-4">Tracking Information</h5>
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <p class="mb-2"><strong>Location:</strong> @Model.Location</p>
                                    <p class="mb-2"><strong>Notes:</strong> @Model.Notes</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="text-end mt-4">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger rounded-pill px-4">
                            <i class="fas fa-trash me-2"></i>Delete Tracking
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize AOS animations
        AOS.init({
            duration: 800,
            easing: 'ease-in-out',
            once: true
        });
    </script>
} 