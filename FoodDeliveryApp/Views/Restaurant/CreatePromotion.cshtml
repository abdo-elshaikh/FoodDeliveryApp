@model FoodDeliveryApp.ViewModels.Promotion.PromotionCreateViewModel

@{
    ViewData["Title"] = "Create Promotion";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Create New Promotion</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreatePromotion" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <input type="hidden" asp-for="RestaurantId" />

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Code" class="form-label">Promo Code</label>
                        <input asp-for="Code" class="form-control" placeholder="e.g. SUMMER20" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control" placeholder="Brief description of the promotion" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="DiscountValue" class="form-label">Discount Value</label>
                        <input asp-for="DiscountValue" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="DiscountValue" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <div class="form-check mt-4">
                            <input asp-for="IsPercentage" class="form-check-input" type="checkbox" />
                            <label asp-for="IsPercentage" class="form-check-label">Is Percentage Discount</label>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="MinimumOrderAmount" class="form-label">Minimum Order Amount</label>
                        <input asp-for="MinimumOrderAmount" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="MinimumOrderAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UsageLimit" class="form-label">Usage Limit</label>
                        <input asp-for="UsageLimit" class="form-control" type="number" min="1" />
                        <span asp-validation-for="UsageLimit" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Create Promotion</button>
                    <a asp-action="Promotions" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}