@model FoodDeliveryApp.ViewModels.RestaurantViewModels.RestaurantListViewModel
@{
    ViewData["Title"] = "Restaurants";
    ViewData["ActiveMenu"] = "Restaurants";
}
<div class="container my-5">
    <h1 class="mb-4" id="restaurantsHeading">Restaurants</h1>

    <!-- Search and Filter Form -->
    <form asp-action="Index" method="get" class="mb-4" aria-labelledby="filterRestaurants">
        <div class="row g-3">
            <div class="col-md-4">
                <label for="searchTerm" class="visually-hidden">Search restaurants</label>
                <input type="text" id="searchTerm" name="searchTerm" value="@Model.SearchTerm" class="form-control" placeholder="Search restaurants..." aria-label="Search restaurants" />
            </div>
            <div class="col-md-3">
                <label for="categoryId" class="visually-hidden">Category</label>
                <select id="categoryId" name="categoryId" asp-items="Model.Categories" class="form-select" aria-label="Filter by category">
                    <option value="">All Categories</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="sortOrder" class="visually-hidden">Sort by</label>
                <select id="sortOrder" name="sortOrder" class="form-select" aria-label="Sort restaurants">
                    <option value="name" selected="@(Model.CurrentSortOrder == "name")">Name (A-Z)</option>
                    <option value="name_desc" selected="@(Model.CurrentSortOrder == "name_desc")">Name (Z-A)</option>
                    <option value="rating" selected="@(Model.CurrentSortOrder == "rating")">Rating (High to Low)</option>
                    <option value="rating_desc" selected="@(Model.CurrentSortOrder == "rating_desc")">Rating (Low to High)</option>
                    <option value="delivery_fee" selected="@(Model.CurrentSortOrder == "delivery_fee")">Delivery Fee (Low to High)</option>
                    <option value="delivery_fee_desc" selected="@(Model.CurrentSortOrder == "delivery_fee_desc")">Delivery Fee (High to Low)</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100" data-bs-toggle="tooltip" title="Apply filters">Filter</button>
            </div>
        </div>
    </form>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" data-bs-animate="fade">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" aria-label="Close alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" data-bs-animate="fade">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" aria-label="Close alert"></button>
        </div>
    }

    <!-- Restaurant Grid -->
    <div class="row row-cols-1 row-cols-md-3 g-4" role="list" aria-labelledby="restaurantsHeading">
        @foreach (var restaurant in Model.Restaurants)
        {
            <div class="col" role="listitem">
                <div class="card h-100">
                    <img src="@restaurant.ImageUrl" class="card-img-top" alt="@restaurant.Name" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@restaurant.Name</h5>
                        <p class="card-text">@restaurant.Description</p>
                        <p class="card-text"><strong>Category:</strong> @restaurant.CategoryName</p>
                        <p class="card-text"><strong>Rating:</strong> @restaurant.Rating.ToString("0.0")</p>
                        <p class="card-text"><strong>Delivery Fee:</strong> @restaurant.DeliveryFee.ToString("C")</p>
                        <p class="card-text"><strong>Status:</strong> @(restaurant.IsOpen ? "Open" : "Closed")</p>
                    </div>
                    <div class="card-footer">
                        <a asp-action="Details" asp-route-id="@restaurant.Id" class="btn btn-primary" data-bs-toggle="tooltip" title="View restaurant details">View Details</a>
                        @if (restaurant.IsAdminOrOwner)
                        {
                            <a asp-action="Edit" asp-route-id="@restaurant.Id" class="btn btn-warning" data-bs-toggle="tooltip" title="Edit restaurant">Edit</a>
                            <button type="button" class="btn @(restaurant.IsActive ? "btn-danger" : "btn-success")" data-bs-toggle="modal" data-bs-target="#toggleStatusModal_@restaurant.Id" data-bs-toggle="tooltip" title="@(restaurant.IsActive ? "Deactivate restaurant" : "Activate restaurant")">
                                @(restaurant.IsActive ? "Deactivate" : "Activate")
                            </button>
                        }
                    </div>
                </div>
            </div>

            <!-- Toggle Status Modal -->
            @if (restaurant.IsAdminOrOwner)
            {
                <div class="modal fade" id="toggleStatusModal_@restaurant.Id" tabindex="-1" aria-labelledby="toggleStatusModalLabel_@restaurant.Id" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="toggleStatusModalLabel_@restaurant.Id">Confirm Status Change</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" aria-label="Close modal"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to @(restaurant.IsActive ? "deactivate" : "activate") @restaurant.Name?
                            </div>
                            <div class="modal-footer">
                                <form asp-action="ToggleStatus" asp-route-id="@restaurant.Id" method="post">
                                    <button type="submit" class="btn btn-primary">Confirm</button>
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Pagination -->
    <nav aria-label="Restaurant pagination" class="mt-4">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" asp-route-categoryId="@Model.CurrentCategoryId" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.CurrentSortOrder" aria-label="Previous page">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-categoryId="@Model.CurrentCategoryId" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.CurrentSortOrder" aria-label="Page @i">@i</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" asp-route-categoryId="@Model.CurrentCategoryId" asp-route-searchTerm="@Model.SearchTerm" asp-route-sortOrder="@Model.CurrentSortOrder" aria-label="Next page">Next</a>
                </li>
            }
        </ul>
    </nav>

    @if (Model.IsAdmin)
    {
        <a asp-action="Create" class="btn btn-success mt-3" data-bs-toggle="tooltip" title="Create a new restaurant">Create New Restaurant</a>
    }
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        tooltipTriggerList.forEach(function (tooltipTriggerEl) {
            new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
}
