@model FoodDeliveryApp.ViewModels.OrderViewModels.OrderTrackViewModel

@{
    ViewData["Title"] = "Track Order";
}

<section class="py-5">
    <div class="container">
        <h1 class="fw-bold">Track Order</h1>
        <p class="text-muted">Order ID: @Model.OrderId</p>

        <div class="card border-0 shadow-sm p-4 mb-4">
            <h3 class="fw-bold">Order Status</h3>
            <p>Status: <span class="badge bg-primary">@Model.Status</span></p>
            @if (Model.EstimatedDeliveryTime.HasValue)
            {
                <p>Estimated Delivery Time: @Model.EstimatedDeliveryTime.Value.ToString("f")</p>
            }
        </div>

        <div class="card border-0 shadow-sm p-4 mb-4">
            <h3 class="fw-bold">Delivery Address</h3>
            <p>
                @Model.DeliveryAddress.AddressLine<br />
                @Model.DeliveryAddress.City, @Model.DeliveryAddress.State<br />
                @Model.DeliveryAddress.PostalCode, @Model.DeliveryAddress.Country
            </p>
        </div>

        <div class="card border-0 shadow-sm p-4">
            <h3 class="fw-bold">Order Items</h3>
            <ul class="list-group">
                @foreach (var item in Model.Items)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail me-3" style="width: 50px; height: 50px;" />
                            @item.Name (x@item.Quantity)
                        </div>
                        <span class="fw-bold">$@item.Price.ToString("0.00")</span>
                    </li>
                }
            </ul>
        </div>
    </div>
</section>
