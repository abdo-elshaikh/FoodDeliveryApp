@model List<FoodDeliveryApp.ViewModels.OrderViewModels.OrderManagementViewModel>

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Order Management</h2>

        <div class="d-flex">
            <div class="dropdown me-2">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                        id="statusFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    Status: @ViewBag.StatusFilter
                </button>
                <ul class="dropdown-menu" aria-labelledby="statusFilterDropdown">
                    <li><a class="dropdown-item" asp-action="Manage" asp-route-status="all">All</a></li>
                    <li><hr class="dropdown-divider"></li>
                    @foreach (var status in Enum.GetValues(typeof(OrderStatus)))
                    {
                        <li>
                            <a class="dropdown-item" asp-action="Manage" asp-route-status="@status">
                                @status
                            </a>
                        </li>
                    }
                </ul>
            </div>

            @if (ViewBag.RestaurantId > 0)
            {
                <a asp-action="Manage" asp-route-status="@ViewBag.StatusFilter"
                   class="btn btn-outline-danger">
                    Clear Restaurant Filter
                </a>
            }
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>No orders found matching your criteria.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Order #</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Restaurants</th>
                            <th>Items</th>
                            <th>Status</th>
                            <th class="text-end">Total</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.Id</td>
                                <td>@order.OrderDate.ToString("g")</td>
                                <td>@order.CustomerName</td>
                                <td>@order.RestaurantCount</td>
                                <td>@order.ItemsCount</td>
                                <td>
                                    <span class="badge bg-@GetStatusBadgeClass(order.Status)">
                                        @order.Status
                                    </span>
                                    <br>
                                    <small class="text-muted">@GetPaymentStatusText(order.PaymentStatus)</small>
                                </td>
                                <td class="text-end">@order.Total.ToString("C"))</td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn btn-sm btn-outline-primary dropdown-toggle"
                                                type="button" id="actionDropdown-@order.Id"
                                                data-bs-toggle="dropdown" aria-expanded="false">
                                            Actions
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end"
                                            aria-labelledby="actionDropdown-@order.Id">
                                            <li>
                                                <a class="dropdown-item" asp-action="Details"
                                                   asp-route-id="@order.Id">
                                                    <i class="fas fa-eye me-2"></i>View Details
                                                </a>
                                            </li>
                                            @if (order.Status != OrderStatus.Delivered && order.Status != OrderStatus.Cancelled)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <input type="hidden" name="status" value="Processing" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-cog me-2"></i>Mark as Processing
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <input type="hidden" name="status" value="Delivered" />
                                                        <button type="submit" class="dropdown-item">
                                                            <i class="fas fa-check-circle me-2"></i>Mark as Delivered
                                                        </button>
                                                    </form>
                                                </li>
                                                <li>
                                                    <form asp-action="UpdateStatus" method="post">
                                                        <input type="hidden" name="id" value="@order.Id" />
                                                        <input type="hidden" name="status" value="Cancelled" />
                                                        <button type="submit" class="dropdown-item text-danger">
                                                            <i class="fas fa-times-circle me-2"></i>Cancel Order
                                                        </button>
                                                    </form>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@functions {
    private string GetStatusBadgeClass(OrderStatus status)
    {
        return status switch
        {
            OrderStatus.Pending => "warning",
            OrderStatus.Processing => "info",
            OrderStatus.Delivered => "success",
            OrderStatus.Cancelled => "danger",
            _ => "secondary"
        };
    }

    private string GetPaymentStatusText(PaymentStatus status)
    {
        return status switch
        {
            PaymentStatus.Pending => "Payment pending",
            PaymentStatus.Completed => "Paid",
            PaymentStatus.Refunded => "Refunded",
            PaymentStatus.Failed => "Payment failed",
            _ => ""
        };
    }
}