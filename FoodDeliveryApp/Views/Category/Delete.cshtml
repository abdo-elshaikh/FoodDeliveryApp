@model FoodDeliveryApp.ViewModels.CategoryViewModel

@{
   ViewData["Title"] = "Delete Category - " + Model.Name;
}

<h2 class="mb-4">Delete Category</h2>

<div class="alert alert-danger">
   <p>Are you sure you want to delete this category?</p>
</div>

<div class="card shadow border-danger">
   <div class="card-header bg-danger text-white">
       <h4 class="my-1">
           <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirm Deletion
       </h4>
   </div>
   <div class="card-body">
       <div class="alert alert-warning">
           <p class="mb-0">Are you sure you want to delete this category? This action cannot be undone.</p>
       </div>

       <dl class="row mt-4">
           <dt class="col-sm-3">Name</dt>
           <dd class="col-sm-9">@Model.Name</dd>

           <dt class="col-sm-3">Description</dt>
           <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "No description available" : Model.Description)</dd>

           <dt class="col-sm-3">Number of Restaurants</dt>
           <dd class="col-sm-9">
               @if (Model.ItemCount > 0)
               {
                   <span class="badge bg-danger">
                       <i class="bi bi-shop me-1"></i>@Model.ItemCount Restaurant(s)
                   </span>
                   <div class="alert alert-danger mt-2">
                       <i class="bi bi-exclamation-circle me-2"></i>This category has associated restaurants. Deleting it may affect these restaurants.
                   </div>
               }
               else
               {
                   <span class="badge bg-success">
                       <i class="bi bi-check-circle me-1"></i>No associated restaurants
                   </span>
               }
           </dd>
       </dl>

       <form asp-action="DeleteConfirmed" method="post" class="mt-4">
           <input type="hidden" asp-for="Id" />
           <div class="d-flex gap-2">
               <button type="submit" class="btn btn-danger btn-lg">
                   <i class="bi bi-trash me-2"></i>Delete Category
               </button>
               <a asp-action="Index" class="btn btn-secondary btn-lg">
                   <i class="bi bi-arrow-left me-2"></i>Cancel
               </a>
           </div>
       </form>
   </div>
</div>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
   <div class="card shadow-sm mt-4">
       <div class="card-body p-0">
           <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Name">
       </div>
   </div>
}
else
{
   <div class="bg-light text-center py-5 rounded shadow mt-4">
       <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
       <p class="mt-3 text-muted">No image available</p>
   </div>
}
