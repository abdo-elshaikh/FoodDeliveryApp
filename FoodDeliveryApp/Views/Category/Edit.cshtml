@model FoodDeliveryApp.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit Category";
    ViewData["ActiveMenu"] = "Admin";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Page Header -->
            <div class="mb-5 text-center">
                <h1 class="display-5 fw-bold theme-text animate__animated animate__fadeIn">Edit Category</h1>
                <p class="text-secondary animate__animated animate__fadeIn animate__delay-1s">
                    Update category information and image
                </p>
            </div>

            <!-- Alerts for messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show rounded-3 shadow-sm animate__animated animate__fadeIn" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show rounded-3 shadow-sm animate__animated animate__fadeIn" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden animate__animated animate__fadeIn">
                <div class="card-body p-4">
                    <form method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />

                        <!-- Category Details -->
                        <div class="row g-4">
                            <!-- Left Column - Category Information -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label asp-for="Name" class="form-label fw-semibold">Category Name</label>
                                    <input asp-for="Name" class="form-control form-control-lg rounded-3" placeholder="Enter category name" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <label asp-for="Description" class="form-label fw-semibold">Description</label>
                                    <textarea asp-for="Description" class="form-control rounded-3" rows="4" placeholder="Enter category description"></textarea>
                                    <span asp-validation-for="Description" class="text-danger small"></span>
                                </div>

                                <div class="mb-4">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" role="switch" id="activeSwitch">
                                        <label class="form-check-label" for="activeSwitch">Active Category</label>
                                    </div>
                                    <div class="form-text text-muted">
                                        <i class="bi bi-info-circle me-1"></i> Active categories will be visible to users
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column - Image Upload -->
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <label class="form-label fw-semibold">Category Image</label>
                                    <div class="card bg-light border rounded-3">
                                        <div class="card-body p-3">
                                            <!-- Current Image Preview -->
                                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                                            {
                                                <div class="mb-3 text-center">
                                                    <p class="small text-secondary mb-2">Current Image</p>
                                                    <img src="@Model.ImageUrl" alt="@Model.Name" id="currentImage"
                                                         class="img-fluid rounded-3 shadow-sm" style="max-height: 200px; object-fit: cover;" />
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="mb-3 text-center py-4 bg-light rounded">
                                                    <i class="bi bi-image text-secondary display-4"></i>
                                                    <p class="text-secondary">No image uploaded</p>
                                                </div>
                                            }

                                            <!-- New Image Upload -->
                                            <div class="mb-3">
                                                <label for="ImageFile" class="form-label">Upload New Image</label>
                                                <input type="file" class="form-control" id="ImageFile" name="ImageFile"
                                                       accept=".jpg,.jpeg,.png,.webp" />
                                                <div class="form-text">Recommended size: 600x400 pixels, max 2MB</div>
                                            </div>

                                            <!-- Image Preview Container -->
                                            <div id="imagePreview" class="mt-3 text-center" style="display: none;">
                                                <p class="small text-secondary mb-2">Image Preview</p>
                                                <img id="previewImage" src="#" alt="Preview" class="img-fluid rounded-3 shadow-sm"
                                                     style="max-height: 200px; object-fit: cover;" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="d-flex justify-content-between pt-4 border-top mt-4">
                            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left me-2"></i> Back to Categories
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary rounded-pill px-5">
                                    <i class="bi bi-check-lg me-2"></i> Save Changes
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Image preview functionality
            const imageInput = document.getElementById('ImageFile');
            const imagePreview = document.getElementById('imagePreview');
            const previewImage = document.getElementById('previewImage');

            imageInput.addEventListener('change', function() {
                const file = this.files[0];

                if (file) {
                    // Show the image preview container
                    imagePreview.style.display = 'block';

                    // Create a FileReader to read and display the image
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImage.setAttribute('src', e.target.result);
                    };
                    reader.readAsDataURL(file);
                } else {
                    // Hide the preview if no file is selected
                    imagePreview.style.display = 'none';
                }
            });
        });
    </script>
}
