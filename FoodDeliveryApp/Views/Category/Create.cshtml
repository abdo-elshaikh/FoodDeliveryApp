@model FoodDeliveryApp.ViewModels.CategoryViewModel

@{
    ViewData["Title"] = "Create New Category";
}

<div class="container py-4">
    <div class="mb-4">
        <h1 class="display-5 fw-bold text-primary">Create New Category</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li class="breadcrumb-item"><a asp-action="Index">Categories</a></li>
                <li class="breadcrumb-item active" aria-current="page">Create New</li>
            </ol>
        </nav>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="my-1">Category Details</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter category name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-bold"></label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter category description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label fw-bold"></label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="Enter image URL" id="imageUrl" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">Enter a valid image URL (e.g., https://example.com/image.jpg)</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary btn-lg px-4">
                                <i class="bi bi-plus-circle me-2"></i>Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="my-1">Image Preview</h5>
                </div>
                <div class="card-body p-0" id="imagePreview">
                    <div class="bg-light text-center py-5 rounded">
                        <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                        <p class="mt-3 text-muted">No image URL provided</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
    // Preview image when URL changes
        $(document).ready(function () {
            $("#imageUrl").on("change", function () {
                const imageUrl = $(this).val();
                if (imageUrl) {
                    $("#imagePreview").html(`<img src="${imageUrl}" class="img-fluid" alt="Preview">`);
                } else {
                    $("#imagePreview").html(`
                            <div class="bg-light text-center py-5 rounded">
                                <i class="bi bi-image text-muted" style="font-size: 5rem;"></i>
                                <p class="mt-3 text-muted">No image URL provided</p>
                            </div>
                        `);
                }
            });
        });</script>
}
