@model IEnumerable<FoodDeliveryApp.ViewModels.CategoryViewModel>

    @{
    ViewData["Title"] = "Categories";
    }

    <h2 class="mb-4">Restaurant Categories</h2>

    <a asp-action="Create" class="btn btn-primary mb-3">
        <i class="bi bi-plus-circle"></i> Add New Category@model IEnumerable<FoodDeliveryApp.ViewModels.CategoryViewModel>

            @{
    ViewData["Title"] = "Restaurant Categories";
            }

            <div class="container py-4">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="display-5 fw-bold text-primary">Restaurant Categories</h1>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add New Category
                    </a>
                </div>

                @if (TempData["SuccessMessage"] != null)
    {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
    }

                @if (TempData["ErrorMessage"] != null)
    {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
    }

                <div class="row row-cols-1 row-cols-md-3 g-4">
                    @foreach (var category in Model)
        {
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(category.ImageUrl))
                    {
                            <img src="@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 180px; object-fit: cover;">
                    }
                    else
                    {
                            <div class="bg-light text-center py-5">
                                <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                            </div>
                    }
                            <div class="card-body">
                                <h5 class="card-title">@category.Name</h5>
                                <p class="card-text text-muted">@(string.IsNullOrEmpty(category.Description) ? "No description available" : category.Description)</p>
                            </div>
                            <div class="card-footer bg-white border-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-light text-dark">
                                        <i class="bi bi-shop me-1"></i>@category.ItemCount Restaurant(s)
                                    </span>
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>Details
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil me-1"></i>Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash me-1"></i>Delete
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        }
                </div>
            </div>

    </a>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Description</th>
                <th>Restaurants</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.ItemCount</td>
                <td>
                    <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Details
                    </a>
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
